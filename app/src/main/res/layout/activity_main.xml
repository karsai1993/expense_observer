<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="observer.expense.android.expenseobserver.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/firstLine">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            style="@style/TableCategories" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense [HUF]"
            android:id="@+id/tv_expense_header"
            style="@style/TableCategories"
            android:paddingBottom="10dp"/>
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category - Price [HUF]"
            style="@style/TableCategories"
            android:layout_weight="1"
            android:gravity="center"/-->
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/all"
        android:layout_below="@+id/firstLine"
        android:id="@+id/maincategorylist"
        android:divider="@color/item_devider"
        android:dividerHeight="1dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/all"
        android:layout_above="@+id/startTime"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All together:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/all_expense"
            android:textColor="@color/item_exp"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/startTime"
        android:layout_above="@+id/plus"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period start date:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/startTimeValue"
            android:textColor="@color/item_datum"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/poweredby"
        android:layout_alignParentRight="true"
        android:background="@drawable/add_button_handler"
        android:text="ADD"
        android:textColor="@color/white"
        android:id="@+id/plus"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/poweredby"
        android:textColor="@color/item_comment_and_category"
        android:background="@drawable/main_clear_button_handler"
        android:text="CLEAR"
        android:id="@+id/clearmain"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:id="@+id/poweredby"
        android:textColor="@color/white"
        android:layout_above="@+id/id"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="László Karsai"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/id"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
